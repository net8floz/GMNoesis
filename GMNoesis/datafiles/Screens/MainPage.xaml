<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:noesis="clr-namespace:NoesisGUIExtensions"
  xmlns:system="clr-namespace:System;assembly=mscorlib"
  Height="NaN"
  d:DataContext="ViewModel Data 01"
  d:DesignHeight="720"
  d:DesignWidth="1280"
  mc:Ignorable="d">
  <b:Interaction.Triggers>
    <noesis:DataEventTrigger EventName="play_reward_animation" Source="{Binding} ">
      <b:ControlStoryboardAction Storyboard="{DynamicResource Storyboard0}"/>
    </noesis:DataEventTrigger>
  </b:Interaction.Triggers>
  <Page.Resources >
    <Storyboard x:Key="Storyboard0">
      <DoubleAnimationUsingKeyFrames Storyboard.TargetName="TextBox0" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
        <LinearDoubleKeyFrame KeyTime="00:00:00" Value="2.1063116"/>
        <LinearDoubleKeyFrame KeyTime="00:00:03.8000000" Value="0.5789288"/>
      </DoubleAnimationUsingKeyFrames>
      <DoubleAnimationUsingKeyFrames Storyboard.TargetName="TextBox0" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)">
        <LinearDoubleKeyFrame KeyTime="00:00:00" Value="3.452373"/>
        <LinearDoubleKeyFrame KeyTime="00:00:03.8000000" Value="2.9090028"/>
      </DoubleAnimationUsingKeyFrames>
    </Storyboard>
  </Page.Resources>
  <Viewbox Stretch="Fill">
    <Border Width="640" Height="360">
      <Canvas>
        <Canvas Canvas.Left="35" Canvas.Top="110.754005" Width="568" Height="228.99998">
          <noesis:NineSliceImage
            Canvas.Left="0"
            Canvas.Top="-51.000008"
            Width="568"
            Height="280"
            Padding="200,200,200,200"
            ImageSource="images/tile_0000.png"
            Slices="5,5,5,5"/>
          <TextBox x:Name="TextBox0" TextWrapping="Wrap" Width="120" Canvas.Top="65.77064" Canvas.Left="211.43344" CaretIndex="0" SelectionLength="0" SelectionStart="0" RenderTransformOrigin="0.5,0.5" Text="{Binding Path=name}">
            <TextBox.RenderTransform>
              <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform/>
                <TranslateTransform/>
              </TransformGroup>
            </TextBox.RenderTransform>
          </TextBox>
        </Canvas>
        <noesis:LayoutScaler Width="80"/>
      </Canvas>
    </Border>
  </Viewbox>
</Page>
